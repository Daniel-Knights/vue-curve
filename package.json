{
    "name": "vue-curve",
    "version": "0.1.10",
    "private": false,
    "description": "A Vue 3 plugin that exposes a custom directive to apply a curved 'box-shadow' to any box-shaped element",
    "author": "Daniel Knights",
    "scripts": {
        "serve": "vue-cli-service serve",
        "lint": "vue-cli-service lint",
        "lib": "vue-cli-service build --target lib --name vue-curve ./src/lib/index.ts && cp src/lib/index.d.ts dist/index.d.ts",
        "pub": "npm version patch && npm publish",
        "pub-minor": "npm version minor && npm publish",
        "pub-major": "npm version major && npm publish"
    },
    "main": "dist/vue-curve.umd.min.js",
    "files": [
        "dist/vue-curve.umd.min.js"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.14.2",
        "@typescript-eslint/parser": "^4.14.2",
        "@vue/cli-plugin-babel": "~4.5.11",
        "@vue/cli-plugin-eslint": "~4.5.11",
        "@vue/cli-plugin-typescript": "^4.5.11",
        "@vue/cli-service": "~4.5.11",
        "@vue/compiler-sfc": "^3.0.5",
        "@vue/eslint-config-typescript": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "core-js": "^3.8.3",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-vue": "^7.5.0",
        "prettier": "^2.2.1",
        "typescript": "~4.1.3",
        "vue": "^3.0.5"
    },
    "peerDependencies": {
        "vue": "^3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "externals": {
        "vue": "vue"
    },
    "keywords": [
        "vue",
        "vue3",
        "vuejs",
        "plugin",
        "directive",
        "style",
        "css"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Daniel-Knights/vue-curve"
    }
}
